extends ../layouts/master.pug

block header
  include ../partials/_header.pug

block content
  main.page-main
    .main-slider
      .text--center(data-aos='fade-up')
        h1 Самый грандиозный перезапуск года: легендарный ресторан Savva открыт
      .main-swiper.swiper-container(data-aos='fade-up')
        .swiper-pagination
        .swiper-wrapper
          - for (let x = 2; x < 8; x++)
            .swiper-slide: span: +img('slider.jpg')
        .swiper-buttons
          .swiper-button-prev: +img('icons/sw-l.svg')
          .swiper-button-next: +img('icons/sw-r.svg')
    .textLiner(data-aos='fade-up')
    .main-carousel
      .tab-container
        .tabs(data-aos='fade-up')
          .tab.active(data-toggle-target=".tab-content-1") новые рестораны
          .tab(data-toggle-target=".tab-content-2") итальянская кухня
          .tab(data-toggle-target=".tab-content-3") адыгейская кухня
          .tab(data-toggle-target=".tab-content-4") грузинская кухня
          .tab(data-toggle-target=".tab-content-5") азиатская кухня
        .tab-content.tab-content-1.active(data-aos='fade-up')
          .swiper-buttons
            .swiper-button-prev: +img('icons/sw-l.svg')
            .swiper-button-next: +img('icons/sw-r.svg')
          .carousel-swiper.swiper-container
            .swiper-wrapper
              - for (let x = 2; x < 4; x++)
                .swiper-slide.restaurant
                  .restaurant-img
                    .badge
                      +img('icons/new-badge.svg')
                      +img('icons/soon-badge.svg')
                    +img('index/slide-1.jpg')
                    .logo: +img('index/logo-1.jpg')
                  .restaurant-desc
                    h3 Nino
                    .inner
                      ul.list--bullet
                        li Доставка
                        li банкет
                      .list
                        .title кухни
                        .text
                            div грузинская
                .swiper-slide.restaurant
                  .restaurant-img
                    .badge
                      +img('icons/new-badge.svg')
                      +img('icons/soon-badge.svg')
                    +img('index/slide-2.jpg')
                    .logo: +img('index/logo-2.jpg')
                  .restaurant-desc
                    h3 СЫРОВАРНЯ АЛЬМЕТЬЕВСК
                    .inner
                      ul.list--bullet
                        li банкет
                      .list
                        .title кухни
                        .text
                          div Адыгейская
                          div Американская
                .swiper-slide.restaurant
                  .restaurant-img
                    .badge
                      +img('icons/new-badge.svg')
                    +img('index/slide-3.jpg')
                  .restaurant-desc
                    h3 aqua
                    .inner
                      ul.list--bullet
                      .list
                        .title кухни
                        .text
                          div азиатская
                          div европейская
                .swiper-slide.restaurant
                  .restaurant-img
                    .badge
                      +img('icons/soon-badge.svg')
                    +img('index/slide-4.jpg')
                  .restaurant-desc
                    h3 КЛЁВО НА УСАЧЕВСКОМ
                    .inner
                      ul.list--bullet
                        li Доставка
                        li банкет
                      .list
                        .title кухни
                        .text
                          div тайская
                          div Американская
        - for (let y = 2; y < 6; y++)
          .tab-content(class='tab-content-'+y)
            .swiper-buttons
              .swiper-button-prev: +img('icons/sw-l.svg')
              .swiper-button-next: +img('icons/sw-r.svg')
            .carousel-swiper.swiper-container(data-aos='fade-up')
              .swiper-wrapper
                - for (let x = 2; x < 4; x++)
                  .swiper-slide.restaurant
                    .restaurant-img
                      .badge
                        +img('icons/new-badge.svg')
                        +img('icons/soon-badge.svg')
                      +img('index/slide-1.jpg')
                      .logo: +img('index/logo-1.jpg')
                    .restaurant-desc
                      h3 Nino
                      .inner
                        ul.list--bullet
                          li Доставка
                          li банкет
                        .list
                          .title кухни
                          .text
                            div грузинская
                  .swiper-slide.restaurant
                    .restaurant-img
                      .badge
                        +img('icons/new-badge.svg')
                        +img('icons/soon-badge.svg')
                      +img('index/slide-2.jpg')
                      .logo: +img('index/logo-2.jpg')
                    .restaurant-desc
                      h3 СЫРОВАРНЯ АЛЬМЕТЬЕВСК
                      .inner
                        ul.list--bullet
                          li банкет
                        .list
                          .title кухни
                          .text
                            div Адыгейская
                            div Американская
                  .swiper-slide.restaurant
                    .restaurant-img
                      .badge
                        +img('icons/new-badge.svg')
                      +img('index/slide-3.jpg')
                    .restaurant-desc
                      h3 aqua
                      .inner
                        ul.list--bullet
                        .list
                          .title кухни
                          .text
                            div азиатская
                            div европейская
                  .swiper-slide.restaurant
                    .restaurant-img
                      .badge
                        +img('icons/soon-badge.svg')
                      +img('index/slide-4.jpg')
                    .restaurant-desc
                      h3 КЛЁВО НА УСАЧЕВСКОМ
                      .inner
                        ul.list--bullet
                          li Доставка
                          li банкет
                        .list
                          .title кухни
                          .text
                            div тайская
                            div Американская
    .main-about(data-aos='fade-up')
      .main-about-badge: +img('index/since.svg')
      .container
        .main-about-title(data-aos='fade-up')
          .main-about-title__top N#[span o]vik#[span o]v
          .main-about-title__bottom GROUP
        .col__md-6.main-about-content(data-aos='fade-up')
          .main-about-desc
            p История Novikov Group берет свое начало в 1991 году. Именно в этом году Аркадий Новиков открыл свой первый ресторан — Sirena, который стал первым рыбным рестораном столицы с качественно новым подходом к кухне, обслуживанию, интерьеру и атмосфере.
            +btnLink('Подробнее о нас')
          .main-about-back
            +img('index/author-0.jpg')
            .visible__sm.visible__xs: +img('index/author-1.jpg')
      .main-about-author: +img('index/author-1.jpg')
    .main-events
      .container(data-aos='fade-up')
        h2 События
        .row.between__xs
          .col.col__xl-7.col__md-7.col__xs-12.main-events-content(data-aos='fade-up')
            +btnLink('Все события')
            .events-list.hidden__sm.hidden__xs
              a.events-item.events-item--main(href='#')
                .events-item-img
                  .events-item-logo: +img('index/logo-1.jpg')
                  +img('index/event-1.jpg')
                .events-item-title Долгожданная премьера эксклюзивных вин проекта Taste Wine Selection of Fine Wines
                .events-item-date 27.03.2021
          .col.col__xl-4.col__md-5.col__xs-12.main-events-content(data-aos='fade-up')
            .events-list.carousel-swiper-m
              .swiper-wrapper
                a.events-item.visible__xs.visible__sm.swiper-slide(href='#')
                  .events-item-img
                    .events-item-logo: +img('index/logo-1.jpg')
                    +img('index/event-1.jpg')
                  .events-item-title Долгожданная премьера эксклюзивных вин проекта Taste Wine Selection of Fine Wines
                  .events-item-date 27.03.2021
                a.events-item.swiper-slide(href='#')
                  .events-item-img
                    +img('index/event-2.jpg')
                  .events-item-title Согревающие коктейли в ресторанах Novikov Group
                  .events-item-date 27.03.2021
                a.events-item.swiper-slide(href='#')
                  .events-item-img
                    .events-item-logo: +img('index/logo-3.jpg')
                    +img('index/event-3.jpg')
                  .events-item-title Ресторан savva дарит скидку зрителям большого театра
                  .events-item-date 27.03.2021

block footer
  include ../partials/_footer.pug
